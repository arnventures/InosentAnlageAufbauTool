<Window x:Class="InosentAnlageAufbauTool.Views.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuration"
        Height="720" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <!-- Sensor IP -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>

            <!-- LED IP -->
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>

            <!-- Sensor Template -->
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>

            <!-- LED Template -->
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>

            <!-- Buttons -->
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- SENSOR IP -->
        <Label Content="Sensor Printer IP:Port" Grid.Row="0" FontSize="24"/>
        <TextBox x:Name="txtSensorIP" Grid.Row="1" FontSize="24" Margin="0 6 0 0"/>

        <!-- LED IP -->
        <Label Content="LED Printer IP:Port" Grid.Row="3" FontSize="24"/>
        <TextBox x:Name="txtLedIP" Grid.Row="4" FontSize="24" Margin="0 6 0 0"/>

        <!-- SENSOR TEMPLATE -->
        <Label Content="Sensor Template (.ezpx)" Grid.Row="6" FontSize="24"/>
        <Grid Grid.Row="7" Margin="0 6 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="160"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="txtTemplateSensor" Grid.Column="0" FontSize="24" IsReadOnly="True" Margin="0 0 8 0"/>
            <Button Grid.Column="1" Content="Browse…" Width="150" Height="50" FontSize="24"
                    Click="OnBrowseTemplateSensor"/>
        </Grid>

        <!-- LED TEMPLATE -->
        <Label Content="LED Template (.ezpx)" Grid.Row="9" FontSize="24"/>
        <Grid Grid.Row="10" Margin="0 6 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="160"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="txtTemplateLED" Grid.Column="0" FontSize="24" IsReadOnly="True" Margin="0 0 8 0"/>
            <Button Grid.Column="1" Content="Browse…" Width="150" Height="50" FontSize="24"
                    Click="OnBrowseTemplateLED"/>
        </Grid>

        <!-- OK / Cancel -->
        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="OK" Width="140" Height="50" FontSize="28" Margin="0 0 20 0"
                    Background="#4CAF50" Foreground="White" Click="OnOK"/>
            <Button Content="Cancel" Width="140" Height="50" FontSize="28"
                    Background="#F44336" Foreground="White" Click="OnCancel"/>
        </StackPanel>
    </Grid>
</Window>
